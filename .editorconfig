# EditorConfig is awesome: https://EditorConfig.org
root = true

# Top-level settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files
[*.yaml]
indent_style = space
indent_size = 2

# C# files
[*.cs]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
